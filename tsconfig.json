{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@apps/shared/*": [
        "src/apps/shared/*"
      ],
      "@apps/*":[
        "src/apps/*"
      ],
      "@common/*":[
        "src/common/*"
      ]
    }
  }
}
